<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context="com.gmoonxs.www.orangehome.DeviceTimerActivity">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height">
            <TextView
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="@dimen/title_txt_size"
                android:text="@string/device_timer_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/device_timer_device_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/device_timer_device_name"
                    android:padding="10dp"
                    />
                <CheckBox
                    android:id="@+id/device_timer_activity_timer_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_timer_activity_timer_operation"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ff6633"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/device_timer_normal"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:text="@string/device_timer_activity_operation"
                            />

                        <Spinner
                            android:id="@+id/device_timer_activity_operation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            >
                        </Spinner>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/device_timer_activity_time_left"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="20dp"
                            style="@style/device_timer_normal"
                            android:layout_alignParentLeft="true"
                            android:paddingLeft="20dp"
                            android:text="@string/device_timer_activity_time"
                            />
                        <ImageView
                            android:id="@+id/device_timer_activity_right"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/device_timer_activity_time"/>
                        <TextView
                            android:id="@+id/device_timer_activity_time"
                            android:layout_toRightOf="@id/device_timer_activity_time_left"
                            android:layout_toLeftOf="@id/device_timer_activity_right"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            style="@style/device_timer_normal"/>
                    </RelativeLayout>
                </LinearLayout>


                <CheckBox
                    android:id="@+id/device_timer_activity_timer_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/device_timer_activity_timer_repeat"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ff6633"
                    android:padding="15dp">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/device_timer_activity_on_time_left"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            style="@style/device_timer_normal"
                            android:layout_alignParentLeft="true"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:text="@string/device_timer_activity_on_time"
                            />
                        <ImageView
                            android:id="@+id/device_timer_activity_on_time_right"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/device_timer_activity_time"/>

                        <TextView
                            android:id="@+id/device_timer_activity_on_time"
                            android:layout_toRightOf="@id/device_timer_activity_on_time_left"
                            android:layout_toLeftOf="@id/device_timer_activity_on_time_right"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            style="@style/device_timer_normal"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/device_timer_activity_off_time_left"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            style="@style/device_timer_normal"
                            android:layout_alignParentLeft="true"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:text="@string/device_timer_activity_off_time"
                            />
                        <ImageView
                            android:id="@+id/device_timer_activity_off_time_right"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/device_timer_activity_time"/>

                        <TextView
                            android:id="@+id/device_timer_activity_off_time"
                            android:layout_toRightOf="@id/device_timer_activity_off_time_left"
                            android:layout_toLeftOf="@id/device_timer_activity_off_time_right"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            style="@style/device_timer_normal"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2">
                        <ImageView
                            android:id="@+id/device_timer_activity_confirm_button"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:src="@drawable/confirm_button"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2">
                        <ImageView
                            android:id="@+id/device_timer_activity_cancel_button"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cancel_button"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>
