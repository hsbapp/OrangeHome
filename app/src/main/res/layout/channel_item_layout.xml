<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/channel_list_item_channel_delete"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/device_delete"/>
        <TextView
            android:id="@+id/channel_list_item_channel_id"
            android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            style="@style/device_list_txt"
            android:layout_height="fill_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/channel_list_item_channel_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/device_list_txt"
            android:layout_weight="1"/>
       <ImageView
           android:id="@+id/channel_list_item_channel_enter"
           android:layout_marginLeft="10dp"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:padding="3dp"
           android:src="@drawable/enter_channel"/>
    </LinearLayout>



</LinearLayout>
