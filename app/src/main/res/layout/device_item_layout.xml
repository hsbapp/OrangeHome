<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/device_list_item_device_delete"
            android:layout_marginLeft="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="8dp"
            android:src="@drawable/device_delete"/>
        <ImageView
            android:id="@+id/device_list_item_device_edit"
            android:layout_marginLeft="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="8dp"
            android:src="@drawable/device_edit"/>

        <TextView
            android:id="@+id/device_list_item_device_name"
            android:paddingLeft="5dp"
            android:layout_width="fill_parent"
            style="@style/device_list_txt"
            android:layout_height="fill_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/device_list_item_device_location"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/device_list_txt"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/device_list_item_device_status"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/device_list_txt"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/device_list_item_device_operate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.8">

        <ToggleButton
            android:id="@+id/device_list_item_switch_power"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="false"
            android:gravity="center"
            android:layout_weight="1"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/device_list_item_timer"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/device_timer"/>

        <ImageView
            android:id="@+id/device_list_item_remote_control"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/remote_control"/>
    </LinearLayout>

</LinearLayout>
