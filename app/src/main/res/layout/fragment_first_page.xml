<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmoonxs.www.orangehome.FirstPageFragment">

    <LinearLayout
        android:id="@+id/state_display"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >
        <!--天气展示-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <!-- 室外天气展示-->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/state_display_txt"
                android:layout_weight="9"
                android:text="@string/state_display_outside"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5">
                    <TextView
                        android:id="@+id/weather_city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        style="@style/state_board_display_txt"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/weather_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        style="@style/state_board_display_txt"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="4">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/state_board_display_aqi"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                style="@style/big_state_board_display_txt"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:text="@string/state_display_aqi"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/state_board_display_quality"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            style="@style/state_board_display_txt"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="6">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:text="@string/state_display_wendu"
                                android:layout_weight="2"/>
                            <TextView
                                android:id="@+id/state_board_display_wendu"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:layout_weight="2"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:text="@string/state_display_wendu_unit"
                                android:layout_weight="3"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:text="@string/state_display_shidu"
                                android:layout_weight="2"/>
                            <TextView
                                android:id="@+id/state_board_display_shidu"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:layout_weight="2"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                style="@style/state_board_display_txt"
                                android:text="@string/state_display_shidu_unit"
                                android:layout_weight="3"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--室内空气质量仪表盘-->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/state_display_txt"
                android:layout_weight="9"
                android:text="@string/state_display_inside"/>
            <LinearLayout
                android:id="@+id/state_board_display_loading"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:indeterminateDrawable="@drawable/animdraw2"
                    android:indeterminateDuration="1500" />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/device_list_txt_loading"
                    android:text="@string/tab_device_list_loading"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/state_board_display_ready"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.gmoonxs.www.orangehome.DialView
                        android:id="@+id/dialView_2_5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/state_board_display_scensor_ready"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"
                            android:text="@string/state_display_inside_pm25"
                            />
                        <TextView
                            android:id="@+id/state_display_inside_pm25"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"
                            android:text="@string/state_display_inside_wendu"
                            />
                        <TextView
                            android:id="@+id/state_display_inside_wendu"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"
                            android:text="@string/state_display_inside_shidu"
                            />
                        <TextView
                            android:id="@+id/state_display_inside_shidu"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"
                            android:text="@string/state_display_inside_ranqi"
                            />
                        <TextView
                            android:id="@+id/state_display_inside_ranqi"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            style="@style/state_board_display_center_txt"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!--日志展示-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_weight="7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <ImageView
                    android:id="@+id/lock_screen"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="7dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/lock_screen"/>

                <ImageView
                    android:id="@+id/enter_voice_recognition"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/lock_screen"
                    android:src="@drawable/voice_control"/>


            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/state_display_txt"
                android:text="@string/state_display_log"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#ffffff">
                <ListView
                    android:id="@+id/state_board_display_logs"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
